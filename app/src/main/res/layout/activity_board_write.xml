<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Board.BoardWriteActivity">

    <ImageView
        android:id="@+id/backImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_arrow_back_24"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_marginLeft="20dp"
            android:text="카테고리"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textDrink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/black_round"
                android:layout_marginLeft="20dp"
                android:text="  술  "
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textSports"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:background="@drawable/black_round"
                android:textColor="@color/black"
                android:text="  운동  "
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textFood"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:background="@drawable/black_round"
                android:text="  식사  "
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textGame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:background="@drawable/black_round"
                android:text="  게임  "
                android:textColor="@color/black"
                android:textSize="20sp" />

        </LinearLayout>

        <EditText
            android:id="@+id/editContent"
            android:layout_width="match_parent"
            android:background="@drawable/black_round"
            android:layout_height="100dp"
            android:layout_margin="20dp"
            android:paddingLeft="10dp"
            android:hint="내용 입력..." />

        <android.widget.Button
            android:id="@+id/insertBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="게시"
            android:background="@drawable/round_background_button"
            android:textColor="@color/black"/>



    </LinearLayout>


</LinearLayout>